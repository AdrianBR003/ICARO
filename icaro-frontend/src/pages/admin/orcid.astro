---
export const prerender = false;
import AdminLayout from "@/layouts/AdminLayout.astro";
---

<AdminLayout title="Importar Investigador">
  <div class="max-w-6xl mx-auto">
    <div class="mb-8 text-center">
      <h1 class="text-2xl font-bold text-[#1D293D]">Importar desde ORCID</h1>
      <p class="text-slate-500 mt-2">
        Gestión centralizada de investigadores y producción científica.
      </p>

      <div class="flex items-center justify-center gap-4 mt-6">
        <div
          id="step-1-indicator"
          class="flex items-center gap-2 transition-opacity duration-300"
        >
          <span
            class="w-8 h-8 rounded-full bg-[#1D293D] text-white flex items-center justify-center font-bold text-sm shadow-md"
            >1</span
          >
          <span class="text-sm font-bold text-[#1D293D]">Buscar</span>
        </div>
        <div class="w-12 h-0.5 bg-slate-200"></div>
        <div
          id="step-2-indicator"
          class="flex items-center gap-2 opacity-50 transition-opacity duration-300"
        >
          <span
            class="w-8 h-8 rounded-full bg-slate-200 text-slate-500 flex items-center justify-center font-bold text-sm transition-colors"
            >2</span
          >
          <span class="text-sm font-medium text-slate-500 transition-colors"
            >Datos</span
          >
        </div>
        <div class="w-12 h-0.5 bg-slate-200"></div>
        <div
          id="step-3-indicator"
          class="flex items-center gap-2 opacity-50 transition-opacity duration-300"
        >
          <span
            class="w-8 h-8 rounded-full bg-slate-200 text-slate-500 flex items-center justify-center font-bold text-sm"
            >3</span
          >
          <span class="text-sm font-medium text-slate-500">Confirmar</span>
        </div>
      </div>
    </div>

    <div id="step-1-area">
      <div
        class="max-w-3xl mx-auto bg-white rounded-xl shadow-sm border border-slate-200 p-8 transition-all relative z-10"
      >
        <form
          id="orcidSearchForm"
          class="flex flex-col md:flex-row gap-4 items-end md:items-center"
        >
          <div class="flex-1 w-full">
            <label
              for="orcidId"
              class="block text-sm font-semibold text-slate-700 mb-2"
              >ORCID iD</label
            >
            <div class="relative group">
              <div
                class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none"
              >
                <svg
                  class="h-6 w-6 text-[#A6CE39]"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  ><path
                    d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 0 1-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.3 0 5.054 2.699 5.054 5.024 0 2.524-1.706 5.017-5.054 5.017H10.21V7.416zM11.654 8.86v7.152h2.296c1.657 0 3.391-1.294 3.391-3.593 0-2.222-1.733-3.559-3.391-3.559h-2.296z"
                  ></path></svg
                >
              </div>
              <input
                type="text"
                id="orcidId"
                placeholder="Ej: 0000-0002-1825-0097"
                class="block w-full pl-14 pr-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-[#006D38] focus:border-[#006D38] font-mono text-base"
                required
              />
            </div>
          </div>
          <button
            type="submit"
            id="searchBtn"
            class="w-full md:w-auto px-6 py-3 bg-[#1D293D] hover:bg-[#2c3e50] text-white font-semibold rounded-lg shadow-md flex items-center justify-center gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg
            >
            <span>Buscar</span>
          </button>
        </form>
        <div id="statusMessage" class="hidden"></div>
      </div>

      <div
        id="previewArea"
        class="max-w-3xl mx-auto mt-8 hidden opacity-0 transition-opacity duration-500"
      >
        <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <h3 class="font-bold text-[#1D293D]">Respuesta de ORCID</h3>
            <span
              class="text-xs font-mono bg-green-50 text-green-700 border border-green-200 px-2 py-1 rounded"
              >200 OK</span
            >
          </div>
          <div
            class="bg-[#151e2e] rounded-lg shadow-inner border border-slate-700 overflow-hidden mb-6"
          >
            <div class="w-full overflow-auto max-h-[200px]">
              <pre
                id="debugJson"
                class="text-left text-emerald-400 p-4 text-xs font-mono whitespace-pre">
              </pre>
            </div>
          </div>
          <div class="flex justify-end pt-4 border-t border-slate-100">
            <button
              id="continueBtn"
              class="flex items-center gap-2 px-6 py-3 bg-[#006D38] hover:bg-[#005a2e] text-white font-bold rounded-lg shadow-md shadow-green-900/10 transform hover:-translate-y-0.5 transition-all"
            >
              <span>Continuar a Revisión</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg
              >
            </button>
          </div>
        </div>
      </div>
    </div>

    <div
      id="step-2-area"
      class="hidden opacity-0 transition-opacity duration-500 mt-8"
    >
      <div
        class="bg-white rounded-xl shadow-lg border border-slate-200 overflow-hidden"
      >
        <div
          class="bg-slate-50 px-8 py-4 border-b border-slate-200 flex justify-between items-center"
        >
          <h2 class="text-lg font-bold text-[#1D293D]">
            Revisar Datos Personales
          </h2>
          <div
            class="bg-[#006D38]/10 text-[#006D38] px-3 py-1 rounded-full text-xs font-bold border border-[#006D38]/20"
          >
            Borrador
          </div>
        </div>

        <div class="p-8">
          <form id="reviewForm" class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="col-span-1 md:col-span-2">
              <label
                class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-1"
                >ORCID iD</label
              >
              <input
                type="text"
                id="reviewOrcidId"
                class="w-full bg-slate-100 border border-slate-300 text-slate-500 text-sm rounded-lg p-2.5 font-mono cursor-not-allowed"
                readonly
              />
            </div>
            <div>
              <label
                for="reviewName"
                class="block text-sm font-semibold text-[#1D293D] mb-1"
                >Nombre</label
              >
              <input
                type="text"
                id="reviewName"
                class="w-full border border-slate-300 rounded-lg p-2.5 focus:ring-[#006D38] focus:border-[#006D38]"
                required
              />
            </div>
            <div>
              <label
                for="reviewLastName"
                class="block text-sm font-semibold text-[#1D293D] mb-1"
                >Apellidos</label
              >
              <input
                type="text"
                id="reviewLastName"
                class="w-full border border-slate-300 rounded-lg p-2.5 focus:ring-[#006D38] focus:border-[#006D38]"
                required
              />
            </div>
            <div>
              <label
                for="reviewRole"
                class="block text-sm font-semibold text-[#1D293D] mb-1"
                >Cargo / Rol</label
              >
              <input
                type="text"
                id="reviewRole"
                placeholder="Ej: Catedrático, Investigador..."
                class="w-full border border-slate-300 rounded-lg p-2.5 focus:ring-[#006D38] focus:border-[#006D38]"
              />
            </div>
            <div>
              <label
                for="reviewOffice"
                class="block text-sm font-semibold text-[#1D293D] mb-1"
                >Despacho</label
              >
              <input
                type="text"
                id="reviewOffice"
                placeholder="Ej: A3-120"
                class="w-full border border-slate-300 rounded-lg p-2.5 focus:ring-[#006D38] focus:border-[#006D38]"
              />
            </div>
            <div>
              <label
                for="reviewEmail"
                class="block text-sm font-semibold text-[#1D293D] mb-1"
                >Email</label
              >
              <input
                type="email"
                id="reviewEmail"
                class="w-full border border-slate-300 rounded-lg p-2.5 focus:ring-[#006D38] focus:border-[#006D38]"
              />
            </div>
            <div>
              <label
                for="reviewPhone"
                class="block text-sm font-semibold text-[#1D293D] mb-1"
                >Teléfono</label
              >
              <input
                type="text"
                id="reviewPhone"
                class="w-full border border-slate-300 rounded-lg p-2.5 focus:ring-[#006D38] focus:border-[#006D38]"
              />
            </div>
            <div class="col-span-1 md:col-span-2">
              <label
                for="reviewBio"
                class="block text-sm font-semibold text-[#1D293D] mb-1"
                >Biografía</label
              >
              <textarea
                id="reviewBio"
                rows="3"
                class="w-full border border-slate-300 rounded-lg p-2.5 focus:ring-[#006D38] focus:border-[#006D38]"
              ></textarea>
            </div>

            <div
              class="col-span-1 md:col-span-2 mt-4 pt-6 border-t border-slate-100"
            >
              <h3 class="text-lg font-bold text-[#1D293D] mb-2">
                Previsualización de Works
              </h3>
              <div
                class="bg-amber-50 border-l-4 border-amber-400 p-4 rounded-r-lg mb-4"
              >
                <p class="text-sm text-amber-700">
                  <strong>Nota:</strong> En el siguiente paso verificaremos si estos
                  trabajos ya existen en la base de datos (Duplicados).
                </p>
              </div>
              <div
                class="flex items-center justify-between bg-slate-50 p-4 rounded-lg border border-slate-200"
              >
                <div>
                  <p class="text-sm font-medium text-[#1D293D]">Resumen:</p><p
                    class="text-xs text-slate-500 mt-1"
                    id="worksCountLabel"
                  >
                    ...
                  </p>
                </div>
                <div class="flex items-center gap-2">
                  <input
                    id="importWorksCheck"
                    type="checkbox"
                    checked
                    class="w-5 h-5 text-[#006D38] rounded focus:ring-[#006D38]"
                  />
                  <label
                    for="importWorksCheck"
                    class="text-sm font-medium text-slate-700"
                    >Analizar Investigaciones</label
                  >
                </div>
              </div>
            </div>
          </form>

          <div class="flex justify-between mt-8 pt-6 border-t border-slate-100">
            <button
              id="backBtn"
              type="button"
              class="text-slate-500 hover:text-[#1D293D] font-medium text-sm px-4 py-2 flex items-center gap-2"
              >← Volver</button
            >
            <button
              id="saveInvestigatorBtn"
              type="button"
              class="px-6 py-3 bg-[#1D293D] hover:bg-[#006D38] text-white font-bold rounded-lg shadow-lg flex items-center gap-2"
            >
              <span>Analizar y Ver Resumen</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg
              >
            </button>
          </div>
        </div>
      </div>
    </div>

    <div
      id="step-3-area"
      class="hidden opacity-0 transition-opacity duration-500 mt-8"
    >
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="md:col-span-1 space-y-6">
          <h3 class="font-bold text-[#1D293D] text-lg">Vista Previa Perfil</h3>

          <div
            class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden relative"
          >
            <div class="p-6 flex flex-col gap-4">
              <div class="flex items-center gap-4">
                <div class="relative flex-shrink-0">
                  <div
                    class="w-20 h-20 rounded-full bg-slate-100 border-2 border-gray-100 flex items-center justify-center text-slate-400"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-10 h-10"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      ><path
                        d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                      ></path></svg
                    >
                  </div>
                  <div
                    class="absolute -bottom-1 -right-1 bg-amber-100 text-amber-700 text-[10px] font-bold px-2 py-0.5 rounded-full border border-amber-200"
                  >
                    New
                  </div>
                </div>
                <div>
                  <h3
                    id="previewCardName"
                    class="text-lg font-bold text-gray-900 leading-tight"
                  >
                  </h3>
                  <p
                    id="previewCardRole"
                    class="text-sm font-medium text-[#006D38] mt-1"
                  >
                  </p>
                </div>
              </div>

              <div class="space-y-3 pt-2 border-t border-gray-50 mt-1">
                <div
                  id="previewCardEmailContainer"
                  class="flex items-center gap-3 text-gray-600"
                >
                  <svg
                    class="w-4 h-4 text-gray-400"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    ><path
                      d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"
                    ></path><path
                      d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"
                    ></path></svg
                  >
                  <span id="previewCardEmail" class="truncate text-sm"></span>
                </div>
                <div
                  id="previewCardPhoneContainer"
                  class="flex items-center gap-3 text-gray-600"
                >
                  <svg
                    class="w-4 h-4 text-gray-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    ><path
                      d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                    ></path></svg
                  >
                  <span id="previewCardPhone" class="text-sm"></span>
                </div>
                <div
                  id="previewCardOfficeContainer"
                  class="flex items-center gap-3 text-gray-600"
                >
                  <svg
                    class="w-4 h-4 text-gray-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    ><path
                      fill-rule="evenodd"
                      d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z"
                      clip-rule="evenodd"></path></svg
                  >
                  <span id="previewCardOffice" class="text-sm"></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="md:col-span-2">
                <h3 class="font-bold text-[#1D293D] text-lg mb-4">Investigaciones a Importar</h3>
                
                <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-4 rounded-r-lg shadow-sm">
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-xs text-blue-600 mt-1">
                                Se han aplicado filtros muy rigurosos para evitar duplicados en la base de datos (ignorando guiones, mayúsculas o pequeñas variaciones). 
                                <br>
                                <strong>Por favor, revise la lista:</strong> Algunos trabajos distintos con títulos muy similares podrían haberse desmarcado por precaución. Si desea importarlos, marque el checkbox manualmente.
                            </p>
                        </div>
                    </div>
                </div>
          <div
            class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden"
          >
            <div class="max-h-[450px] overflow-y-auto relative">
              <table class="w-full text-sm text-left">
                <thead
                  class="text-xs text-slate-500 uppercase bg-slate-50 sticky top-0 z-10 border-b border-slate-200"
                >
                  <tr>
                    <th class="px-4 py-3 text-center w-10">#</th>
                    <th class="px-6 py-3">ID (PutCode)</th>
                    <th class="px-6 py-3">Año</th>
                    <th class="px-6 py-3">Título</th>
                    <th class="px-6 py-3">Estado</th>
                  </tr>
                </thead>
                <tbody
                  id="previewWorksTableBody"
                  class="divide-y divide-slate-100"></tbody>
              </table>
            </div>
            <div
              class="bg-slate-50 px-6 py-3 border-t border-slate-200 text-xs text-slate-500 flex justify-between"
            >
              <span id="previewTotalWorks">0 trabajos</span>
              <span class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-green-500"></span> Nuevo
                <span class="w-2 h-2 rounded-full bg-red-400 ml-2"></span> Duplicado
              </span>
            </div>
          </div>

          <div class="flex justify-between mt-8 pt-6 border-t border-slate-200">
            <button
              id="backToReviewBtn"
              type="button"
              class="text-slate-500 hover:text-[#1D293D] font-medium text-sm px-4 py-2 flex items-center gap-2"
              >← Volver a Editar</button
            >

            <button
              id="finalImportBtn"
              type="button"
              class="px-8 py-3 bg-[#006D38] hover:bg-[#005a2e] text-white font-bold rounded-lg shadow-lg hover:shadow-green-900/20 transform hover:-translate-y-0.5 transition-all duration-300 flex items-center gap-2"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path></svg
              >
              <span>FINALIZAR IMPORTACIÓN</span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div
      id="duplicateLoader"
      class="fixed inset-0 bg-white/90 backdrop-blur-sm z-50 hidden flex flex-col items-center justify-center"
    >
      <div
        class="w-16 h-16 border-4 border-slate-200 border-t-[#006D38] rounded-full animate-spin mb-4"
      >
      </div>
      <h3 class="text-lg font-bold text-[#1D293D]">Analizando duplicados...</h3>
      <p class="text-slate-500 text-sm">Consultando Base de Datos</p>
    </div>
  </div>
</AdminLayout>

<script>
  import { initOrcidSearch } from "@/utils/admin/orcidSearchController";
  // Iniciamos cuando carga
  document.addEventListener("DOMContentLoaded", () => {
    initOrcidSearch();
  });
</script>
