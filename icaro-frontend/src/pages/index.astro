---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/CCommon/Header.astro";
import RecentCarousel from "@/components/CIndex/RecentCarousel.astro";
import NavBar from "@/components/CCommon/NavBar.astro";
import TopUtility from "@/components/CCommon/TopUtility.astro";
import IndexInfo from "@/components/CIndex/IndexInfo.astro";
import "@/styles/index.css";
import epslimage from "@/assets/epslportada.webp";

const dataHeader = {
	titulo: "Mi titulo del header",
	descripcion: "Descripción del header",
};
---

<BaseLayout>
	<section class="max-w-full bg-white shadow-md rounded-lg">
		<TopUtility />
		<Header />
	</section>
	<section class="my-10 max-w-full bg-white shadow-md">
		<NavBar />
	</section>

	<section class="max-w-full bg-white shadow-md ">
		<div class="relative w-full overflow-hidden h-250">
			<img
				src={epslimage.src}
				alt="EPSL Logo"
				class="w-full object-cover"
			/>
		</div>
	</section>

	<section
		class="max-w-full content-wrap bg-white shadow-md
         sm:px-6 lg:px-8 pb-20 pt-10"
	>
		<div class="mb-8 relative inline-block w-full text-center">
			<h2 class="text-2xl font-bold text-[#231F20] pb-2">
				Grupo de Investigación
			</h2>
			<span
				class="absolute left-1/2 bottom-0 w-20 h-1 bg-[#006D38]
             -translate-x-1/2"
			></span>
		</div>
		<IndexInfo />
	</section>

	<section
		class="max-w-full content-wrap bg-white shadow-md
    	 px-4 sm:px-6 lg:px-8 pb-20 pt-10"
	>
		<div class=" mb-8 relative inline-block w-full text-center">
			<h2 class="text-2xl font-bold text-[#231F20] pb-2">
				Investigaciones recientes
			</h2>
			<span
				class="absolute left-1/2 bottom-0 w-20 h-1 bg-[#006D38]
             -translate-x-1/2"
			></span>
		</div>
		<RecentCarousel />
	</section>
</BaseLayout>
