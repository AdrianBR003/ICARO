---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import NavBar from "@/components/NavBar.astro";
import TopUtility from "@/components/TopUtility.astro";
import "@/styles/index.css";
import imagedefault from "@/assets/imagedefault.webp";
import imagedefault2 from "@/assets/epslportada.webp";
import imagedefault3 from "@/assets/imageexample.webp";

const researchProjects = [
  {
    id: 1,
    title: "Procesamiento de Señales 5G",
    collaborators: ["Dr. Juan Pérez", "Dra. María López", "Dr. Carlos Ruiz"],
    description:
      "Investigación avanzada en técnicas de procesamiento de señal para redes de quinta generación, mejorando la eficiencia espectral y reduciendo interferencias.",
    image: imagedefault.src,
    link: "/research/5g-signal-processing",
  },
  {
    id: 2,
    title: "Machine Learning en Telecomunicaciones",
    collaborators: [
      "Dra. Ana García",
      "Dr. Luis Martínez",
      "Dr. Roberto Sánchez",
    ],
    description:
      "Aplicación de algoritmos de aprendizaje automático para optimizar el rendimiento de redes de telecomunicaciones y predecir fallos en el sistema.",
    image: imagedefault2.src,
    link: "/research/ml-telecom",
  },
  {
    id: 3,
    title: "Comunicaciones Cuánticas",
    collaborators: [
      "Dr. Fernando Díaz",
      "Dra. Elena Torres",
      "Dr. Javier Jiménez",
    ],
    description:
      "Desarrollo de sistemas de comunicación seguros basados en principios de la mecánica cuántica para proteger la información contra interceptaciones.",
    image: imagedefault3.src,
    link: "/research/quantum-comms",
  },
  {
    id: 4,
    title: "IoT para Smart Cities",
    collaborators: [
      "Dra. Carmen Vargas",
      "Dr. Antonio Mora",
      "Dr. Miguel Ángel Reyes",
    ],
    description:
      "Implementación de redes de sensores interconectados para optimizar servicios urbanos como transporte, energía y gestión de residuos.",
    image: "/images/iot-smart-city.jpg",
    link: "/research/iot-smart-cities",
  },
];
---

<BaseLayout>
  <section class="max-w-full bg-white shadow-md rounded-lg">
    <TopUtility />
    <Header />
  </section>
  <section class="my-10 max-w-full bg-white shadow-md">
    <NavBar />
  </section>

  <section class="w-full px-4 py-10 mx-auto max-w-custom">
    <div class="text-center mb-14">
      <div class="mb-8 relative inline-block w-full text-center py-2">
        <h2 class="text-2xl font-bold text-[#231F20]">News</h2>
        <span
          class="absolute left-1/2 bottom-0 w-20 h-1 bg-[#006D38] -translate-x-1/2"
        ></span>
      </div>
      <p class="text-lg text-gray-600 mx-auto max-w-2xl">
        Nuestro grupo de investigación se especializa en el desarrollo de
        tecnologías avanzadas de telecomunicación y procesamiento de señales.
      </p>
    </div>

    <div class="grid gap-10">
      {
        researchProjects.map((project) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden transition-all duration-300 research-card group">
            <div class="flex flex-col lg:flex-row">
              <div class="lg:w-2/5 flex-shrink-0">
                <div class="w-full h-64 lg:h-72 overflow-hidden flex items-center justify-center bg-white p-4">
                  <img
                    src={project.image}
                    alt={project.title}
                    class="max-w-full max-h-full object-contain rounded-lg"
                  />
                </div>
              </div>

              <div
                class="lg:w-3/5 p-8 lg:p-10 relative flex flex-col"
                style="min-height: 288px;"
              >
                <h2 class="text-2xl font-bold text-[#1D293D] mb-4 relative inline-block">
                  {project.title}
                  <span class="absolute left-0 -bottom-2 w-0 h-1 bg-[#006D38] transition-all duration-300 group-hover:w-full" />
                </h2>

                <div class="mb-5">
                  <h3 class="text-base font-semibold text-[#1D293D] mb-2">
                    Colaboradores:
                  </h3>
                  <p class="text-gray-700">
                    {project.collaborators.join(", ")}
                  </p>
                </div>

                <div class="mb-5">
                  <h3 class="text-base font-semibold text-[#1D293D] mb-2">
                    Descripción:
                  </h3>
                  <p class="text-gray-600 mb-6 leading-relaxed text-justify flex-grow">
                    {project.description}
                  </p>
                </div>

                <div class="mt-auto flex justify-end">
                  <a
                    href={project.link}
                    class="px-6 py-3 bg-white text-[#006D38] border border-[#006D38] rounded-lg font-medium flex items-center 
        transition-all duration-300 transform hover:bg-[#006D38] hover:text-white hover:scale-105"
                  >
                    Leer más
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5 ml-2"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</BaseLayout>

<style>
  .research-card {
    width: 100%;
  }

  @media (min-width: 1024px) {
    .research-card {
      margin-left: -20px;
      margin-right: -20px;
    }
  }

  .max-w-custom {
    max-width: 1200px;
  }
</style>
