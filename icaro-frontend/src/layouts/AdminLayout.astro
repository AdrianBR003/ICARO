---
import AdminSidebar from "@/components/CAdmin/AdminSidebar.astro";
import "@/styles/index.css"; 

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Administración</title>
  </head>
  <body class="bg-slate-50 min-h-screen font-sans text-slate-600 selection:bg-[#006D38]/20 selection:text-[#1D293D]">
    
    <div class="flex">
      
      <AdminSidebar />

      <main class="flex-1 ml-64 p-8 md:p-12">
        <header class="mb-10 flex justify-between items-end border-b border-slate-200 pb-6">
             <div>
                <h2 class="text-3xl font-bold text-[#1D293D] tracking-tight">{title}</h2>
                <p class="text-sm text-slate-500 mt-2">Bienvenido al panel de gestión del sistema.</p>
             </div>
             
             <div class="w-11 h-11 rounded-full bg-[#1D293D] text-white border-2 border-white flex items-center justify-center font-bold shadow-md ring-2 ring-slate-200">
                A
             </div>
        </header>

        <slot />
      </main>
      
    </div>

    <script>
      const token = localStorage.getItem('adminToken');
      if (!token) {
        window.location.href = '/login';
      }
    </script>
  </body>
</html>