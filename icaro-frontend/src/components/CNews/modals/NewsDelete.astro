---
import { initializeDeleteModal } from "@/utils/news/modals/newsDeleteModal.js";
---

<div
  id="deleteNewsModal"
  class="hidden fixed inset-0 z-[100] flex items-center justify-center p-4 bg-black/50"
>
  <div
    class="modal-content relative bg-white rounded-lg shadow-xl w-full max-w-md"
    onclick="event.stopPropagation()"
  >
    <div class="p-6">
      <!-- Icono -->
      <div
        class="flex items-center justify-center w-12 h-12 mx-auto mb-4 bg-red-100 rounded-full"
      >
        <svg
          class="w-6 h-6 text-red-600"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.134 16.5c-.77.833.192 2.5 1.732 2.5z"
          ></path>
        </svg>
      </div>

      <!-- Título -->
      <h3 class="text-xl font-bold mb-4 text-gray-900 text-center">
        Confirmar Eliminación
      </h3>

      <div class="mb-6 text-gray-700 text-center">
        <p class="mb-3">
          ¿Estás seguro de que deseas eliminar la noticia
          <strong id="deleteNewsTitle" class="text-gray-900"></strong>?
        </p>

        <div class="bg-red-50 border border-red-200 rounded-lg p-3 mb-3">
          <p class="text-sm text-red-800 font-medium">
            ⚠️ Esta acción eliminará permanentemente:
          </p>
          <ul class="text-sm text-red-700 mt-1 list-disc list-inside">
            <li>La noticia</li>
            <li>Las imágenes asociadas</li>
            <li>Los datos relacionados</li>
          </ul>
        </div>

        <span class="text-sm text-red-600 font-medium">
          Esta acción no se puede deshacer.
        </span>
      </div>

      <!-- Botones -->
      <div class="flex gap-3 pt-4">
        <button
          type="button"
          id="cancelNewsDeleteBtn"
          class="flex-1 px-4 py-2.5 border border-gray-300 rounded-lg text-gray-700 font-medium transition-all duration-300 hover:bg-gray-100 hover:text-gray-900 hover:border-gray-400 hover:shadow-sm transform hover:-translate-y-0.5 active:scale-95"
        >
          Cancelar
        </button>

        <button
          type="button"
          id="confirmNewsDeleteBtn"
          class="flex-1 px-4 py-2.5 bg-red-600 text-white rounded-lg font-bold shadow-md hover:bg-red-700 hover:shadow-lg transition-all transform hover:-translate-y-0.5 active:scale-95"
        >
          Sí, eliminar
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  .modal-content {
    transform: scale(0.95);
    transition: transform 0.3s ease-in-out;
  }

  .hidden .modal-content {
    transform: scale(0.95);
  }

  :not(.hidden) .modal-content {
    transform: scale(1);
  }
</style>

<script>
  import { initializeDeleteModal } from "@/utils/news/modals/newsDeleteModal.js";

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initializeDeleteModal);
  } else {
    initializeDeleteModal();
  }
</script>
