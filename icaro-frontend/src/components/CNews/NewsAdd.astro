<div class="admin-control hidden mb-4 flex justify-center">
  <button
    id="btn-add-news"
    class="bg-[#006D38] hover:bg-[#005229] text-white font-bold py-2 px-4 rounded flex items-center transition-colors"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-5 w-5 mr-2"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <path
        fill-rule="evenodd"
        d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
        clip-rule="evenodd"></path>
    </svg>
    Añadir Noticia
  </button>

  <div
    id="modal-add-news"
    class="hidden fixed inset-0 z-50 flex items-center justify-center p-4 text-left"
    style="background: rgba(0,0,0,0.5);"
  >
    <div
      class="bg-white rounded-lg shadow-xl w-full max-w-2xl max-h-[90vh] overflow-y-auto"
    >
      <div class="p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold">Crear Nueva Noticia</h3>
          <button
            type="button"
            id="btn-close-modal"
            class="text-gray-500 hover:text-gray-700">✕</button
          >
        </div>

        <form id="form-add-news" novalidate>
          <div class="space-y-4">
            <div>
              <label class="block mb-1 text-sm font-medium"
                >ID de la noticia *</label
              >
              <div class="flex space-x-2">
                <input
                  type="text"
                  id="newsId"
                  name="id"
                  required
                  class="w-full px-3 py-2 border rounded-md focus:ring-2 focus:outline-none transition-colors"
                  placeholder="Clic en 'Generar' o escriba un ID"
                />
                <button
                  type="button"
                  id="btn-generate-id"
                  class="px-3 py-2 text-sm bg-blue-100 text-green-800 rounded-md hover:bg-blue-200 whitespace-nowrap"
                  >Generar ID</button
                >
                <button
                  type="button"
                  id="btn-verify-id"
                  class="px-3 py-2 text-sm bg-gray-100 text-gray-800 rounded-md hover:bg-gray-200"
                  >Verificar</button
                >
              </div>
              <p id="id-status" class="text-xs text-gray-400 mt-1">
                Un ID único es requerido. Genere uno o escriba el suyo.
              </p>
            </div>
            
            <div>
              <label class="block mb-1 text-sm font-medium">Título *</label>
              <input
                type="text"
                name="title"
                required
                class="w-full px-3 py-2 border rounded-md"
              />
            </div>
            
            <div>
              <label class="block mb-1 text-sm font-medium">Descripción *</label>
              <textarea
                name="description"
                rows="4"
                required
                class="w-full px-3 py-2 border rounded-md"></textarea>
            </div>

            <div>
              <label class="block mb-1 text-sm font-medium"
                >Fecha de Publicación</label
              >
              <input
                type="date"
                name="publicationDate"
                class="w-full px-3 py-2 border rounded-md"
              />
              <p class="text-xs text-gray-400 mt-1">
                Fecha en que se publica la noticia (opcional)
              </p>
            </div>

            <div>
              <label class="block mb-1 text-sm font-medium">Enlace (URL)</label>
              <input
                type="url"
                name="link"
                class="w-full px-3 py-2 border rounded-md"
                placeholder="https://ejemplo.com"
              />
            </div>

            <div class="flex gap-4 pt-4 border-t">
              <button
                type="button"
                id="btn-cancel"
                class="px-4 py-2 border rounded-md hover:bg-gray-50 flex-1"
              >
                Cancelar
              </button>
              <button
                type="submit"
                class="px-4 py-2 bg-[#006D38] text-white rounded-md hover:bg-[#005229] flex-1"
              >
                Crear Noticia
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  import { initializeAddModal } from "@/utils/news/addModal.ts";
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeAddModal);
  } else {
    initializeAddModal();
  }
  document.addEventListener('astro:page-load', initializeAddModal);
</script>