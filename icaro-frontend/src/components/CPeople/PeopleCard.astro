---
import type { InvestigatorDTO } from "@/types/people";

interface Props {
  person: InvestigatorDTO;
}

const { person } = Astro.props;
const fullName = `${person.givenNames} ${person.familyName}`;
const personJson = JSON.stringify(person);

const defaultImg = "http://localhost:8080/assets/people/default.jpg";
---

<div
  class="person-card bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300 relative group"
>
  <div class="absolute top-3 right-3 flex flex-col gap-2 z-20">
    <button
      type="button"
      class="edit-btn admin-control hidden group/edit p-2 rounded-full bg-white/90 shadow-sm border border-gray-200 transition-all duration-300 hover:bg-green-50 hover:ring-[#006D38]/30 transform hover:-translate-y-0.5"
      data-entity-data={personJson}
      title="Editar Investigador"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 text-gray-600 transition-colors group-hover/edit:text-[#006D38]"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
        ></path>
      </svg>
    </button>

    <button
      type="button"
      class="delete-btn admin-control hidden group/delete p-2 rounded-full bg-white/90 shadow-sm border border-gray-200 transition-all duration-300 hover:bg-red-50 hover:ring-red-500/30 transform hover:-translate-y-0.5"
      data-entity-id={person.orcid}
      data-entity-title={fullName}
      title="Eliminar Investigador"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 text-gray-600 transition-colors group-hover/delete:text-red-600"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
          clip-rule="evenodd"></path>
      </svg>
    </button>
  </div>

  <div class="p-6 flex flex-col gap-4">
    <div class="flex items-center gap-4">
      <div class="relative flex-shrink-0">
        <img
          src={defaultImg}
          alt={`Foto de ${fullName}`}
          class="w-20 h-20 rounded-full object-cover border-2 border-gray-100 shadow-sm"
          loading="lazy"
          data-orcid-image
          data-orcid={person.orcid}
        />
      </div>
      <div>
        <h3 class="text-lg font-bold text-gray-900 leading-tight">
          {fullName}
        </h3>
        {
          person.role && (
            <p class="text-sm font-medium text-[#006D38] mt-1">{person.role}</p>
          )
        }
      </div>
    </div>

    <div class="space-y-2.5 text-sm pt-2 border-t border-gray-50 mt-1">
      {/* Email - ICONO CORREGIDO */}
      {
        person.email && (
          <div class="flex items-center gap-3 text-gray-600 group/item">
            <div class="w-8 flex justify-center text-gray-400 group-hover/item:text-[#006D38] transition-colors">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
                <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
              </svg>
            </div>
            <span class="truncate">{person.email}</span>
          </div>
        )
      }

      {/* Tel√©fono */}
      {
        person.phone && (
          <div class="flex items-center gap-3 text-gray-600 group/item">
            <div class="w-8 flex justify-center text-gray-400 group-hover/item:text-[#006D38] transition-colors">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
              </svg>
            </div>
            <span>{person.phone}</span>
          </div>
        )
      }

      {/* Oficina */}
      {
        person.office && (
          <div class="flex items-center gap-3 text-gray-600 group/item">
            <div class="w-8 flex justify-center text-gray-400 group-hover/item:text-[#006D38] transition-colors">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
            <span>{person.office}</span>
          </div>
        )
      }
    </div>
  </div>
</div>
