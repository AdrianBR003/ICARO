---
const navItems = [
  { title: "RESEARCH", href: "/research", hasDropdown: true },
  { title: "ABOUT US", href: "/about", hasDropdown: true },
  { title: "CAREER", href: "/career", hasDropdown: true },
  { title: "SERVICE", href: "/service", hasDropdown: true },
  { title: "IMPACT", href: "/impact", hasDropdown: true },
  { title: "PEOPLE", href: "/people", hasDropdown: false },
  { title: "NEWS", href: "/news", hasDropdown: false },
  { title: "EVENTS", href: "/events", hasDropdown: false },
];
---

<nav class="bg-white border-b border-gray-200">
  <div
    class="container mx-auto px-4
           flex flex-col md:flex-row
           items-center md:justify-center
           h-auto md:h-14 relative"
  >
    <!-- botón -->
    <button
      id="menu-btn"
      class="md:hidden p-2 self-end absolute right-0 top-3"
      aria-label="Toggle menu"
    >
      <svg
        class="h-6 w-6 text-slate-700"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
      >
        <path d="M3 6h18M3 12h18M3 18h18"></path>
      </svg>
    </button>

    <!-- menú -->
    <ul
      id="menu"
      class="hidden flex-col md:flex md:flex-row
         gap-0 md:gap-6
         w-full md:w-auto
         justify-center"
    >
      {
        navItems.map((i) => (
          <li class="border-b md:border-none">
            <a
              href={i.href}
              class="flex items-center w-full
               h-12 md:h-14 px-4
               uppercase text-sm tracking-wide text-sky-700
               hover:bg-sky-700 hover:text-white
               transition-colors"
            >
              {i.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("menu-btn");
    const menu = document.getElementById("menu");
    if (!btn || !menu) return;

    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
      menu.classList.toggle("flex"); 
    });
  });
</script>
