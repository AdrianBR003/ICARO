---
import ProjectCard from "@/components/CProjects/ProjectCard.astro";
import type { Project } from "@/types/project";

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<div class="space-y-6" id="projects-list">
  {
    projects.length > 0 ? (
      projects.map((project) => (
        <ProjectCard Project={project} />
      ))
    ) : (
      /* Mensaje opcional por si la búsqueda no trae nada */
      <div class="text-center text-gray-500 py-10">
        <p>No se encontraron proyectos con esos criterios.</p>
      </div>
    )
  }
</div>

<script>
  import { initProjectListInteractions } from "@/utils/projects/projectListInteractions";

  // Solo inicializamos interacciones de UI (Acordeón), nada de búsqueda
  document.addEventListener("DOMContentLoaded", () => {
    initProjectListInteractions();
  });
</script>