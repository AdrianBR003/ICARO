<div
  id="project-edit-modal"
  class="hidden fixed inset-0 z-[60] flex items-center justify-center p-4 fade-in"
  role="dialog"
  aria-modal="true"
>
  <div class="modal-overlay absolute inset-0 bg-black/60 backdrop-blur-sm"></div>

  <div class="relative bg-white rounded-xl shadow-2xl w-full max-w-4xl max-h-[90vh] overflow-y-auto">
    <div class="p-8">
      
      <div class="flex justify-between items-center mb-6 pb-4 border-b border-gray-100">
        <h3 class="text-2xl font-bold text-gray-800">Editar Proyecto</h3>
        <button id="close-edit-modal" type="button" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        </button>
      </div>

      <form id="edit-project-form" class="space-y-5">
        <input type="hidden" name="id" />

        <div>
          <label class="block mb-1.5 text-sm font-semibold text-gray-700">Título *</label>
          <input type="text" name="title" required class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#006D38]" />
        </div>

        <div>
          <label class="block mb-1.5 text-sm font-semibold text-gray-700">Descripción *</label>
          <textarea name="description" rows="4" required class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#006D38]"></textarea>
        </div>

        <div>
          <label class="block mb-1.5 text-sm font-semibold text-gray-700">Participantes</label>
          <textarea name="participants" rows="2" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#006D38]" placeholder="Separados por comas..."></textarea>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block mb-1.5 text-sm font-semibold text-gray-700">Fecha de Inicio *</label>
            <input type="date" name="firstProjectDate" required class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#006D38]" />
          </div>
          <div>
            <label class="block mb-1.5 text-sm font-semibold text-gray-700">Fecha de Finalización</label>
            <input type="date" name="secondProjectDate" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#006D38]" />
          </div>
        </div>

        <div class="flex justify-end gap-3 pt-6 border-t border-gray-100 mt-6">
          <button id="cancel-edit-btn" type="button" class="px-5 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium">
            Cancelar
          </button>
          <button type="submit" class="px-6 py-2.5 bg-[#006D38] text-white rounded-lg hover:bg-[#005229] font-medium shadow-md">
            Guardar Cambios
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  import { initProjectEditModal } from "@/utils/projects/modals/projectsEditModals";
  document.addEventListener("DOMContentLoaded", initProjectEditModal);
</script>