<script>
  import { getDashboardStats } from "@/services/admin/dashboardService";

  const dom = {
    inv: document.getElementById('stat-investigators'),
    news: document.getElementById('stat-news'),
    works: document.getElementById('stat-works')
  };

  const loadStats = async () => {
    const stats = await getDashboardStats();
    
    // Animación simple de conteo o asignación directa
    if(dom.inv) dom.inv.innerText = stats.investigatorsCount.toString();
    if(dom.news) dom.news.innerText = stats.newsCount.toString();
    if(dom.works) dom.works.innerText = stats.worksCount.toString();
  };

  loadStats();
  
  // Opcional: Recargar al volver a la pestaña
  document.addEventListener('astro:page-load', loadStats);
</script>