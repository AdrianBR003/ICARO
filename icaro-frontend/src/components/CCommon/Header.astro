---
import ContLogos from "@/components/CCommon/ComptLogo.astro";
---

<header class="bg-white sticky top-0 z-50 shadow-sm">
  <div class="container mx-auto px-4 py-3 md:py-4">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3 sm:gap-4">
      <div class="flex-1">
        <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-[#231F20] leading-tight">
          Grupo de Investigación
        </h1>
        <p class="text-xs sm:text-sm md:text-base tracking-wide text-gray-500 mt-0.5">
          Tratamiento de Señales en Sistemas de Telecomunicación
        </p>
      </div>
      <div class="self-end sm:self-auto">
        <ContLogos />
      </div>
    </div>
  </div>
</header>